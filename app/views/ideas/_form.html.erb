<%= form_with(model: idea, local: true, class: 'form') do |form| %>
  <% if idea.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(idea.errors.count, "error") %> prohibited this idea from being saved:</h2>

      <ul>
        <% idea.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :name, class: 'col-lg-3 col-form-label form-control-label' %>
    <div class="col-lg-9"> 
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :description, class: 'col-lg-3 col-form-label form-control-label' %>
    <div class="col-lg-9"> 
      <%= form.text_area :description, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :picture, class: 'col-lg-3 col-form-label form-control-label' %>
    <div class="col-lg-9"> 
      <%= form.text_field :picture, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-lg-3 col-form-label form-control-label"></label>
    <div class="col-lg-9">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
